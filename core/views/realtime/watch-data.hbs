<div class="row realtime-watch" ng-controller="WatchDataCtrl" ng-init="init()">
    <div class="col-sm-12 headline">
        <h1 class="page-header">
            Realtime <small>watch data</small>
        </h1>
    </div>

    <div class="col-sm-8">
        <div class="panel panel-default filters">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-5">
                        <div class="form-group">
                            <label>Collection</label>
                            <input
                                    type="text"
                                    ng-model="collection"
                                    uib-typeahead="collection for collection in collections | filter:$viewValue"
                                    typeahead-min-length="0"
                                    class="form-control" />
                        </div>
                    </div>
                </div>

                <uib-tabset>
                  <uib-tab ng-click="onBasicFilterSelected()" heading="Basic filter" active="searchType.basic">

                      <basic-filter
                              add-group-label="Add group"
                              filters="filter.basicFilter"
                              collection="collection"
                              filter-in-url="basicFilterUrl"
                              comparators="comparators">
                      </basic-filter>


                  </uib-tab>
                  <uib-tab ng-click="onAdvancedFilterSelected()" heading="Advanced filter" active="searchType.advanced">
                      <form name="forms.advancedSearch">
                          <div class="form-group">
                              <label for="filter">Filter</label>
                              <p class="text-danger" ng-show="error" ng-bind="error"></p>
                              <json-edit content="filter.advancedFilter"></json-edit>

                              <!-- <div class="form-group">
                                  <button type="submit" class="btn btn-default" ng-click="advancedSearch()">Submit</button>
                                  <a href ng-click="resetAdvancedFilter()">Clear</a>
                              </div> -->
                          </div>
                      </form>
                  </uib-tab>
                </uib-tabset>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" ng-click="subscribe()" ng-disabled="subscribed">Subscribe &nbsp;<span class="glyphicon glyphicon-play"><span></button>
                    <button type="submit" class="btn btn-default" ng-click="unsubscribe()" ng-disabled="!subscribed">Unsubscribe&nbsp;<span class="glyphicon glyphicon-pause"><span></button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
      <div class="panel panel-default">
        <messages messages="messages"></messages>
      </div>
    </div>
</div>
