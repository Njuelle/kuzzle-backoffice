<div class="row edit-collection" ng-controller="CollectionFullCtrl" ng-init="init('{{action}}')">
    <div class="col-sm-12 headline">
        <h1 class="page-header">
            Collection <small>{{action}}</small>
        </h1>
    </div>

    <div class="col-sm-10 col-sm-offset-1" ng-if="notFoundError">
        <p>There is no document matching the collection <strong ng-bind="collection"></strong>.</p>
    </div>

    <div class="col-sm-10 col-sm-offset-1" ng-if="!notFoundError">

        <form>
            <div class="form-group">
                <label for="name">Collection name</label>
                <input type="text" class="form-control" ng-model="collection.name" id="name" ng-disabled="isEdit">
            </div>
            <div class="form-group">
                <label for="name">Collection schema</label>
                <json-edit content="collection.schema" can-edit="true"></json-edit>
            </div>

            <div class="actions-group">
                <button type="submit" class="btn btn-success control" ng-if="!isEdit" ng-click="update(true)">Create</button>
                <button type="submit" class="btn btn-success control" ng-if="isEdit" ng-click="update()">Update</button>
                <a class="control" ng-click="cancel()">Cancel</a>
            </div>
        </form>

    </div>
</div>