<div class="role-browse" ng-controller="RoleBrowseCtrl" ng-init="init()">
    <headline title="Roles" subtitle="Browse roles"></headline>
    <div class="container container-medium">
        <div class="row whitespace-top">
            <div class="col-sm-12">
                <div class="create">
                    <button type="button" class="btn btn-success"  ui-sref="role.create">
                      <i class="fa fa-plus"></i> Add role
                    </button>
                </div>

              <div class="container">
                <div class="row whitespace-top">
                  <div class="col-sm-12">
                    <documents-inline documents="roles" role="true" can-edit="canUpdateRole"></documents-inline>
                  </div>

                  <div class="col-sm-12 text-right"
                       ng-show="roles.length < total">
                    <div class="row">
                      <uib-pagination
                        total-items="total"
                        ng-model="currentPage"
                        max-size="4"
                        class="pagination-sm"
                        boundary-links="true"
                        rotate="false"
                        ng-change="loadRoles()"
                        num-pages="numPages"
                        previous-text="Prev"
                        next-text="Next"
                        items-per-page="limit">
                      </uib-pagination>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-sm-12" ng-if="roles.length === 0">
                <p>There is no role in this database.</p>
            </div>
        </div>
    </div>
</div>