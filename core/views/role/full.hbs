<div class="edit-collection" ng-controller="RoleFullCtrl" ng-init="init('{{action}}')">
  <headline title="Role" subtitle="{{action}}"></headline>
  <div class="container">
    <div class="row whitespace-top">
      <div class="col-sm-12 role-not-found" ng-if="notFoundError">
        <p>There is no role matching the name <strong ng-bind="role.id">null</strong>.</p>
      </div>

      <div class="col-sm-12" ng-if="!notFoundError">
        <form>
            <div class="form-group">
                <label for="role-id">Role name</label>
                <input type="text" class="form-control" ng-model="role.id" id="role-id" ng-disabled="isEdit">
            </div>
            <div class="form-group">
                <label for="name">Role content</label>
                <json-edit content="role.content"></json-edit>
            </div>

            <div class="actions-group">
                <button id="create" type="submit" class="btn btn-success control" ng-if="!isEdit" ng-click="update(true)">Create</button>
                <button id="update" type="submit" class="btn btn-success control" ng-if="isEdit" ng-click="update()">Update</button>
                <a class="control" ng-click="cancel()">Cancel</a>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
