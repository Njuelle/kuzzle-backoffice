<div class="row edit-collection" ng-controller="ProfileFullCtrl" ng-init="init('{{action}}')">
    <div class="col-sm-12 headline">
        <h1 class="page-header">
            Profiles <small>{{action}}</small>
        </h1>
    </div>

    <div class="col-sm-10 col-sm-offset-1 profile-not-found" ng-if="notFoundError">
        <p>There is no profile matching the name <strong ng-bind="profile.id">null</strong>.</p>
    </div>

    <div class="col-sm-10 col-sm-offset-1" ng-if="!notFoundError">

        <form>
            <div class="form-group">
                <label for="profile-id">Profile name</label>
                <input type="text" class="form-control" ng-model="profile.id" id="profile-id" ng-disabled="isEdit">
            </div>
            <div class="form-group">
                <label for="name">Profile content</label>
                <json-edit content="profile.content"></json-edit>
            </div>

            <div class="actions-group">
                <button id="create" type="submit" class="btn btn-success control" ng-if="!isEdit" ng-click="create()">Create</button>
                <button id="update" type="submit" class="btn btn-success control" ng-if="isEdit" ng-click="update()">Update</button>
                <button id="replace" type="submit" class="btn btn-warning control" ng-if="isEdit" ng-click="replace()">Replace</button>
                <a class="control" ng-click="cancel()">Cancel</a>
            </div>
        </form>

    </div>
</div>
